{
    "name": "conia/sire",
    "description": "A PHP validation library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "ebene fÃ¼nf GmbH",
            "email": "conia@ebenefuenf.de",
            "role": "Developer"
        }
    ],
    "homepage": "https://conia.dev/sire",
    "keywords": [
        "conia",
        "validation"
    ],
    "autoload": {
        "psr-4": {
            "Conia\\Sire\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Conia\\Sire\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "symfony/html-sanitizer": "^6.2"
    },
    "require-dev": {
        "pestphp/pest": "^1",
        "vimeo/psalm": "^5",
        "dealerdirect/phpcodesniffer-composer-installer": "^1"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
